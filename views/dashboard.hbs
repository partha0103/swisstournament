<!DOCTYPE html>
    <html>
        <head>
            <title>Tournament Page</title>
            <link rel="stylesheet" type="text/css"
                href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        </head>
        <body>
        <nav class="navbar navbar-default navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <ul class="nav navbar-nav">
                        <li>
                            <button type="button" class="btn btn-default navbar-btn"><a href="/profile">Home</a></button>
                        </li>
                        <li>
                            <button class="btn btn-primary status navbar-btn">Start</button>
                        </li>
                        <li>
                            <button class="btn btn-info navbar-btn add_exist"  data-toggle="modal" data-target="#adde_modal">Add Existing
                            </button>
                        </li>
                        <li>
                            <button type="button" class="btn btn-default navbar-btn"><a href="/logout">Logout</a></button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
        <input type="text" name="tournament_id" hidden class="tournament_id"
            value="{{tournament_id}}">
            <div class="row">
                <div class="col-md-6 panel">
                    <h2 class="th_name text-success">Tournament Name: </h2>
                </div>
                <div class="col-md-6 panel">
                    <h2 class="t_status text-success">Tournament Status: </h2>
                </div>
            </div>
            <div class="row">
                <h2 class="col-md-12 text-success winner_display text-center">Winner:</h2>
            </div>
            <div class="row">
                <div class="col-md-6 ">
                    <div class="row well players">
                        <div class="col-md-12 panel input-group">
                            <input type="text" name="players" class="form-control p_input">
                            <span class="input-group-btn">
                                <button class="btn btn-info addPlayer" type="button">Add</button>
                            </span>
                        </div>

                        <div class="players_body">

                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="well st_table">

                    </div>
                </div>
            </div>
            <div class="row r_table well">
                <div class="col-md-12">
                    <table class="table table-striped table-hover col-md-12 panel ">
                        <thead class="bg-info">
                            <th>Round#</th>
                            <th>Status</th>
                            <th>Result</th>
                            <th>Play</th>
                        </thead>
                        <tbody class='r_details'>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        {{>pairings}}
        {{>matchreport}}
        {{>addExisting}}
        <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js">
        </script>
        <script type="text/javascript" src="/js/notify.min.js"></script>
        <script type="text/javascript" src="/js/script.js"></script>
        <script src="https://npmcdn.com/tether@1.2.4/dist/js/tether.min.js"></script>
        <script type="text/javascript"
            src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js">
        </script>
    </body>
</html>
