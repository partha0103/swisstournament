{{>header}}
<div class="row">
    <div class="col-md-6">
        <h1 class="th_name">Tournament Name: </h1>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                <h3></h3>
            </div>
            <div class="col-md-6">
                <button class="btn btn-primary status">Start</button>
            </div>
        </div>
    </div>
